string_two = "my homework!"
string_3 = my_string+string_two
print(my_string)
print(string_3)

float_string3 = "%.2f" % (1.237)
print(float_string3)
print("%(x)i + %(y)i = %(z)i" % {"x":1, "y":2,"z":5})

