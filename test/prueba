import csv

def csv_reader(file_obj):
    """
    Read a csv file
    """
    reader = csv.reader(file_obj)
    for row in reader:
        print(" ".join(row))

if __name__ == "__main__":
    csv_path = "/home/carana/Derco/veritrade_autos_06_2017_final.csv"
    with open(csv_path, "r") as f_obj:
        csv_reader(f_obj)




